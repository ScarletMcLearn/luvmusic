<!DOCTYPE html5>
<html lang="en" xmlns="http://www.w3.org/19999/xhtml">
<head>
	<title>Signin | Luv Music</title>
	<link rel="stylesheet" type="text/css" href="/views/css/signinStyle.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	
	<meta charset="utf-8">
    <meta http-equiv="Content-type" content="text/html;charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
	
</head>
<body>

	<div class="header">
		<a href="/">Luv Music</a>
		<hr>
	</div>
	<div class="section">
		
		<div class="login-notice-section">
			<h1>Signin</h1> or
			<a href="/signup">Signup here</a>
		</div>

		<form class="forms">
			<!--<span>Username</span>-->
			<!--<input type="text" id="username" placeholder="Username">-->
			<span>Email</span>
			<input type="text" id="email" placeholder="Email">
			<span>Password</span>
			<input type="password" id="password" placeholder="Password">
			<button id="submit" type="submit">Signin</button>
			<div id="error"></div>
		</form>

	</div>
	<script src="/lib/jquery/dist/jquery.min.js"></script>
	<script src="/vendor/ejs_production.js"></script>
	<script>
		var user = {};
		$("#email").change(function(event){
			user.email = $("#email").val();
		});
		$("#password").change(function(event){
			user.password = $("#password").val();
		});
		$("#submit").click(function(event){
			$.ajax({
				method: 'POST',
				url: '/auth/signin',
				data: user
			}).done(function(response){
				console.log(response);
				window.location.replace('/');
			}).fail(function(response){
				console.log(response);
        		$('#error').css({
        			'display': 'block',
        			'border': '1px solid #ff0000',
        			'color': '#ff0000',
        			'padding': '10px',
        			'font-size': '13px
        			
        		});
        		$('#error').text("Username or password don't match! Try again");
			});
		});
	</script>
	
</body>